datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
 
model User {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  email     String   @unique
  phone     String
  loans     Loan[]
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  genre       String
  year        Int
  available   Boolean @default(true)
  loans       Loan[]
}

model Loan {
  id        Int      @id @default(autoincrement())
  userId    Int
  bookId    Int
  loanDate  DateTime @default(now())
  returnDate DateTime?
  returned  Boolean  @default(false)

  user User @relation(fields: [userId], references: [id])
  book Book @relation(fields: [bookId], references: [id])
}
